# Twitch API Credentials
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# TikTok API Credentials (after approval)
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
TIKTOK_UPLOAD_URL=https://open-api.tiktok.com/v1/post/publish/video/init/
TIKTOK_PUBLISH_URL=https://open-api.tiktok.com/v1/post/publish/action/publish/

# Channels to Monitor (comma-separated)
TWITCH_CHANNELS=ninja,pokimane,shroud

# Polling Interval (minutes)
POLLING_INTERVAL=60

# Whisper Model Size (tiny, base, small, medium, large)
WHISPER_MODEL=small

# Dry Run (set to true for testing without uploading)
DRY_RUN=false

# Database (default: SQLite)
DATABASE_URL=sqlite:///./data/clips.db
